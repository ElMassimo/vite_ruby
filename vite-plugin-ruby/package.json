{
  "name": "vite-plugin-ruby",
  "description": "Convention over configuration for using Vite in Ruby apps",
  "version": "2.0.0",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "author": "MÃ¡ximo Mussini <maximomussini@gmail.com> (https://maximomussini.com)",
  "repository": {
    "type": "git",
    "url": "https://github.com/ElMassimo/vite_ruby"
  },
  "keywords": [
    "plugin",
    "rails",
    "ruby",
    "vite",
    "vite-plugin",
    "vitejs"
  ],
  "homepage": "https://github.com/ElMassimo/vite_ruby/blob/main/vite-plugin-ruby",
  "bugs": "https://github.com/ElMassimo/vite_ruby/issues",
  "files": [
    "dist",
    "default.vite.json"
  ],
  "scripts": {
    "lint": "eslint .",
    "test": "jest",
    "dev": "npm run build -- --watch",
    "example:dev": "npm -C example run dev",
    "example:build": "npm -C example run build",
    "build": "tsup src/index.ts --dts --format cjs,esm",
    "prepublishOnly": "npm run build",
    "postpublish": "PACKAGE_VERSION=$(cat package.json | grep \\\"version\\\" | head -1 | awk -F: '{ print $2 }' | sed 's/[\",]//g' | tr -d '[[:space:]]') && git tag vite-plugin-ruby@$PACKAGE_VERSION && git push --tags"
  },
  "dependencies": {
    "debug": "^4.3.1",
    "fast-glob": "^3.2.4"
  },
  "peerDependencies": {
    "vite": ">=2.0.0"
  },
  "devDependencies": {
    "@types/debug": "^4.1.5",
    "@types/minimatch": "^3.0.3",
    "@types/node": "^14.14.20",
    "jest": "^26.5.3",
    "rollup": "^2.36.1",
    "standard-version": "^9.1.0",
    "tsup": "^3.11.0",
    "typescript": "^4.1.3",
    "vite": "^2.0.0"
  },
  "jest": {
    "testRegex": "(/__tests__/.*|(\\.|/))\\.jsx?$",
    "roots": [
      "<rootDir>/package"
    ]
  }
}
