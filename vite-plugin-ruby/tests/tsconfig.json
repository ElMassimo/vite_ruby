{
  "include": ["."],
  "exclude": ["**/dist/**"],
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "outDir": "dist",
    "allowJs": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "jsx": "preserve",
    "types": ["vite/client", "vitest", "node"],
    "paths": {
      "@plugin/*": ["src/*"]
    },
  }
}
